/**index.wxss**/
@import "../../components/myModal/index.wxss";
.flexbox { display:-webkit-box; display:-webkit-box-flex; display:box; display:-webkit-flex; display:flex; -webkit-box-pack:justify; -webkit-justify-content:space-around; }
.flexbox > .flex-item { -webkit-box-flex:1; box-flex:1; flex:1;  }
::-webkit-scrollbar { width: 0; height: 0; color: transparent;}
input{ background:#000!important; }

page{ height:100%; font:26rpx/40rpx "微软雅黑"; }

.container{ box-sizing:border-box;  height:100%; overflow-y:scroll;-webkit-overflow-scrolling:touch;  position:relative; background:#FDD01B; }
.banner image{ width:750rpx; height:380rpx;}
.main{ margin-top:120rpx; padding:0 50rpx; }
.main .cate{ background:#fff; padding:60rpx 20rpx; border-radius:20rpx; position:relative;}
.main .cate .dotLeft{ position:absolute; left:-20rpx; margin-top:-20rpx; top:50%; display:inline-block; height:40rpx; width:40rpx; background:#FDD01B; border-radius:50%;  }
.main .cate .dotRight{ position:absolute; right:-20rpx; margin-top:-20rpx; top:50%; display:inline-block; height:40rpx; width:40rpx; background:#FDD01B; border-radius:50%;  }
.main .flex-item{ text-align:center; }
.main .flex-item image{ height:120rpx; width:120rpx; }
.main .flex-item .name{ font:32rpx/60rpx "微软雅黑"; font-weight:bold; }
.main .flex-item:active image{ height:130rpx; width:130rpx; margin:-5rpx; }


.guide{ text-align:center; padding-top:250rpx; }
.guide .qrcode{ height:300rpx; width:300rpx; margin-bottom:15rpx; }

.bottomCon{ text-align:center; position:absolute; bottom:80rpx; left:50%; margin-left:-220rpx; }
.bottomCon .dot{ border:1px solid #FDBA30; height:14rpx; width:14rpx; display:inline-block; border-radius:50%; background:#FDD01B; margin-bottom:10rpx; }
.bottomCon .title{ font:28rpx/60rpx "微软雅黑"; color:#754C24;  margin-bottom:20rpx; font-weight:bold; }
.bottomCon .title .backet{ color:#FDD01B; display:inline-block; margin-left:5px; }
.bottomCon .itemCon{ font:26rpx/40rpx "微软雅黑"; color:#8B6326;  }
.bottomCon .itemCon .item{ display:inline-block; margin:0 30rpx;}
.bottomCon .itemCon .item_img{ height:70rpx; width:70rpx; }

.footer{ z-index:100; position:fixed; bottom:0; height:100rpx; width:100%; background:#fff; box-sizing:border-box; overflow:hidden; zoom:1; }
.footer image{ height:50rpx; width:50rpx; display:block; padding-top:10rpx; margin-bottom:-5rpx; }
.footer view{ color:#c6a113; font-size:20rpx; text-align:center; }
.footer view.active{ color:#f26522 }