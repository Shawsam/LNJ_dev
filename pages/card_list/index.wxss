/**index.wxss**/
@import "../../components/myModal/index.wxss";
.flexbox { display:-webkit-box; display:-webkit-box-flex; display:box; display:-webkit-flex; display:flex; -webkit-box-pack:justify; -webkit-justify-content:space-around; }
.flexbox > flex-item { -webkit-box-flex:1; box-flex:1; flex:1;  }
::-webkit-scrollbar { width: 0; height: 0; color: transparent;}

page{ height:100%; font:26rpx/40rpx "微软雅黑"; }
.container{ box-sizing:border-box; background:#e7e7e7; height:100%; overflow-y:scroll;-webkit-overflow-scrolling:touch; position:relative; padding-bottom:110rpx; }

.footer{ z-index:100; position:fixed; bottom:0; height:110rpx; width:100%; background:#fff; box-sizing:border-box; overflow:hidden; zoom:1; }
.footer .confirmBtn{ position:absolute; top:0; right:0; height:110rpx;  font:36rpx/110rpx "微软雅黑"; font-weight:bold; width:100%;  text-align:center; background:#FDD01B; }
.footer .confirmBtn:active{ opacity:0.6; }


.bar{height:1px;background:#f8f8f8;}
.rela{position:relative;}
.abso{position:absolute;}
.margin{margin:0 6rpx;}
.head{height:180rpx; background:#302f34; text-align:center; margin-bottom:-140rpx; }
.top{ position:relative; text-align:center; color:#fff; font-weight:bold; margin-bottom:40rpx; height:40rpx; line-height:40rpx; font:32rpx/40rpx "微软雅黑"; vertical-align:bottom; }
.top > image{ display:inline-block; width:50rpx; height:40rpx; margin-right:20rpx; vertical-align:bottom;}

.center{ height:120rpx; background:#fff; margin:0 60rpx; border-radius:10rpx; padding:0 30rpx; line-height:120rpx; position:relative; margin-bottom:50rpx; font-size:28rpx; }
.shadows{ box-shadow:-5rpx 5rpx 15rpx rgba(0, 0,0,0.1);}
.list{ padding:0 60rpx; } 
.list .cate{ background:#FDD01B; line-height:80rpx; padding:0 30rpx; margin-bottom:20rpx; border-radius:10rpx; font-size:28rpx; position:relative;  }
.list .cateDisabled{ background:#999;  }
.list .cate image{width:30rpx;  height:20rpx; position:absolute; top:30rpx; right:30rpx;}
.list .ableCoupon{ display:none; }
.list .disableCoupon{ display:none; }
.list .ableCoupon.slide{ display:block; }
.list .disableCoupon.slide{ display:block; }
.list .title{line-height:80rpx; padding:0 10rpx; margin-bottom:20rpx; border-top:1px solid #b6b6b6; border-bottom:1px solid #b6b6b6; font-size:28rpx;}
.list .title image{width:30rpx; height:20rpx;}
.list .ticket{ margin-bottom:30rpx;display:none; position:relative; border-radius:20rpx;}
.list .ticket .content{ background:#fff; border-radius:20rpx; height:140rpx; padding:15rpx 0; position:relative; border-bottom:1px solid #e8e8e8;}
.list .ticket .reason{ background:#fff; border-radius:20rpx; padding:25rpx 40rpx; color:#999; position:relative; }
.list .ticket .reason .tit{ color:#f00; position:relative; padding-left:38rpx; font-size:24rpx;}
.list .ticket .reason .tit icon{ display:inline-block; position:absolute; top:6rpx; left:0;}
.list .ticket .disablePanel{ position:absolute; height:100%; width:100%; background:rgba(255,255,255,0.5); content:''; display:block; z-index:100; top:0; left:0; border-radius:20px; }
.list .ticket.slide{ display:block; }
.list .ticket .content > view{display:inline-block; height:100%; vertical-align:top;}
.list .ticket_type{width:150rpx;text-align:center;border-right:1px solid #ccc;font-weight: bold;}
.list .typeName{ font-size:29rpx; }
.list .ticket_type > view:nth-child(1){color:#f00; line-height:60rpx; padding-top:15rpx; font-size:35rpx;}
.list .ticket_time{ padding:20rpx 0 0 40rpx; box-sizing:border-box; font-size:26rpx; }
.list .ticket_time > view{line-height:50rpx;}

.list .ticket_time.manjian{ padding:10rpx 0 0 40rpx;  }
.list .ticket_time.manjian .validtime{ line-height:35rpx; }
.list .ticket_time.manjian .txt{ line-height:35rpx;}
.list .dot_bot{position:absolute; right:0; width:30rpx; height:30rpx; border-radius:30rpx 30rpx 0 0; background:#e7e7e7; bottom:-15rpx; right:60rpx;}
.list .dot_top{position:absolute; right:0; top:-15rpx;width:30rpx;height:30rpx;border-radius:0 0 30rpx 30rpx ;background:#e7e7e7; right:60rpx;}

.rote{transform:rotate(180deg);-ms-transform:rotate(180deg);-moz-transform:rotate(180deg);-webkit-transform:rotate(180deg);-o-transform:rotate(180deg); }
.flo_right{float:right;color:#707070;}
.flo_right> image{width:30rpx;vertical-align:middle; margin:0 20rpx;}
input{display:none;}
image.choose{  height:40rpx; width:40rpx; position:absolute; right:50rpx; top:50%; margin-top:-20rpx; }
image.choosed{ height:40rpx; width:40rpx; position:absolute; right:50rpx; top:50%; margin-top:-20rpx;}