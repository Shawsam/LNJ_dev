/**index.wxss**/
@import "../../components/myModal/index.wxss";
.flexbox { display:-webkit-box; display:-webkit-box-flex; display:box; display:-webkit-flex; display:flex; -webkit-box-pack:justify; -webkit-justify-content:space-around; }
.flexbox > .flex-item { -webkit-box-flex:1; box-flex:1; flex:1;  }
.words_line2 { display: -webkit-box;display: box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden; }
::-webkit-scrollbar { width: 0; height: 0; color: transparent;}

page{ height:100%; font:28rpx/40rpx "微软雅黑"; }
.container{  background:#f3f3f3; box-sizing:border-box;  height:100%; overflow-y:scroll;-webkit-overflow-scrolling:touch; box-sizing:border-box; position:relative; }
.cont{ padding:0 30rpx; background:#fff; margin-bottom:30rpx;  line-height:70rpx; position:relative; }
.cont .title{ border-bottom:1rpx solid #e8e8e8; padding:10rpx 0; font-size:30rpx; }
.cont .shop{ padding:10rpx 0; font-size:30rpx; font-weight:bold; }
.cont .name{ padding-top:15rpx;  font-size:30rpx; font-weight:bold;  }
.cont .desp{ padding-bottom:20rpx; color:#888;  }
.cont .val{ position:absolute; bottom:20rpx; right:30rpx; font-size:40rpx; color:#f39800; font-weight:bold;}
.footer{ position:absolute; bottom:0; display:block; width:100%; line-height:80rpx; padding:20rpx 0; text-indent:30rpx; background:#fff; font-size:30rpx; font-weight:bold;}
.footer .val{ font-size:40rpx; color:#f39800; font-weight:bold; }
.footer .payBtn{ position:absolute; right:30rpx; top:20rpx; line-height:80rpx; background:#ffc600; display:inline-block; width:220rpx; text-align:center; text-indent:0;  border-radius:40rpx; }